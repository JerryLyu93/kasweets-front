/**index.wxss**/
.swiper {
  width: 100%;
}
.swiper swiper {
  width: 100%;
  height: 400rpx;
}
.swiper swiper image {
  width: 100%;
}
.goods-list{
  background-color: #fff;
  padding: 0 10px;
}
.goods-list-item {
  display: inline-block;
  width: 315rpx;
  margin: 30rpx 20rpx;
  box-sizing: border-box;
}
.goods-list-item image {
  width: 315rpx;
  height: 315rpx;
  background-color: #f0f0f0;
  border: 2rpx solid #e3e3e3;
  border-radius: 8rpx;
}
.goods-list-title {
  display: block;
  margin-top: 10px;
  font-size: 32rpx;
  line-height: 36rpx;
  letter-spacing: 0.4rpx;
  color: #333;
}
.goods-list-price {
  font-size: 28rpx;
  line-height: 32rpx;
  letter-spacing: 0.4rpx;
  color: #e35850;
}
